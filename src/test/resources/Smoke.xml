<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Smoke" parallel="methods" thread-count="1">

    <parameter name="BaseUrl" value="https://qa.koel.app/"/>
    <test name="Smoke Tests" preserve-order="false">
        <classes>
            <class name="LoginTests">
            <methods>
                <include name="loginWithCorrectCredentials"/>
            </methods>
            </class>

            <class name="RegistrationTests">
                <methods>
                    <include name="registrationNavigation"/>
                </methods>
            </class>

            <class name="ProfileTest">
                <methods>
                    <include name="changeProfileName"/>
                </methods>
            </class>

            <class name="SongsTest">
                <methods>
                    <include name="playSongsByRightClick"/>
                </methods>
            </class>

        </classes>
    </test>
</suite>